#!/bin/sh

URL=$1
FILE=`basename "$URL"`
DIR="static/catimg"
if [ ! -z "$2" ]; then FILE=$2; fi
if [ ! -z "$3" ]; then DIR=$3; fi

curl -o tmp.jpg "$URL" \
&& sips -s format jpeg -s formatOptions "75%" tmp.jpg --out tmp2.jpg \
&& /opt/libjpeg-turbo/bin/jpegtran \
     -copy none -optimize -outfile $DIR/$FILE tmp2.jpg
rm -f tmp.jpg tmp2.jpg
echo `basename $DIR`/$FILE
